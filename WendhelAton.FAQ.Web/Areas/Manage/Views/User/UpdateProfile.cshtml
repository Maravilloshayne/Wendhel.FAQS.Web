@model WendhelAton.FAQ.Web.Areas.Manage.ViewModels.Users.UpdateProfileViewModel
@{
    ViewData["Title"] = "UpdateProfile";
    Layout = "~/views/shared/_publiclayout.cshtml";
}

<section id="subintro" style="background-color:darkred">
    <div class="jumbotron subhead" id="overview">
        <div class="container">
            <div class="row">
                <div class="span12">
                    <div class="centered">
                        <h3>College of Subic Montessori,Inc.</h3>
                        <p>
                            Admin User Update Profile
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<form action="~/manage/users/update-profile" method="post">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <div class="form-group">
        <input type="hidden" asp-for="UserId" />
        <label for="firstName">@Model.FirstName</label>
        <input type="text" class="form-control" id="firstName" asp-for="FirstName" aria-describedby="firstNameHelp" placeholder="Enter first name">
        <small id="firstNameHelp" class="form-text text-muted">First name is required.</small>
    </div>
    <div class="form-group">
        <label for="lastName">@Model.LastName</label>
        <input type="text" class="form-control" id="lastName" asp-for="LastName" aria-describedby="lastNameHelp" placeholder="Enter last name">
        <small id="lastNameHelp" class="form-text text-muted">Last name is required.</small>
    </div>
    <div class="form-group">
        <label for="gender">@Model.Gender   </label>
        <select class="form-control" id="gender" asp-for="Gender">
            @{
                var options = Enum.GetValues(typeof(WendhelAton.FAQ.Web.Infrastructure.Data.Enums.gender)).Cast<WendhelAton.FAQ.Web.Infrastructure.Data.Enums.gender>();
                foreach (WendhelAton.FAQ.Web.Infrastructure.Data.Enums.gender option in options)
                {
                    if (Model.Gender == option)
                    {
                        <option value="@option" selected>@option.ToString()</option>
                    }
                    else
                    {
                        <option value="@option">@option.ToString()</option>
                    }
                }
            }
        </select>
        <small id="genderHelp" class="form-text text-muted">Gender is required.</small>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a href="~/manage/users/Index" class="btn btn-danger">Cancel</a>
</form> 