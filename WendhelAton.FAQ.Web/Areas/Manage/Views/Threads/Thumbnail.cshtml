@model WendhelAton.FAQ.Web.Areas.Manage.ViewModels.Threads.ThumbnailViewModel
@{
    ViewData["Title"] = "Thumbnail";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<section id="subintro" style="background-color:darkred">
    <div class="jumbotron subhead" id="overview">
        <div class="container">
            <div class="row">
                <div class="span12">
                    <div class="centered">
                        <h3>College of Subic Montessori,Inc.</h3>
                        <p>
                            Admin Threads Update Thumbnail
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="row">
    <div class="col-md-6">
        <form action="~/manage/threads/update-thumbnail" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <input type="hidden" name="ThreadId" value="@Model.ThreadId" />
                <label for="Thumbnail">Thumbnail:</label><br />
                <img src="~/threads/@Model.ThreadId/thumbnail.png" style="width:150px;height:150px;" /></br></br>
                <input type="file" class="form-control" name="thumbnail" />
                @Html.ValidationSummary()
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Upload" />
                </div>
            </div>
        </form>
    </div>
</div>
