@model WendhelAton.FAQ.Web.Areas.Manage.ViewModels.Threads.UpdateTitleViewModel
@{
    ViewData["Title"] = "UpdateTitle";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<section id="subintro" style="background-color:darkred">
    <div class="jumbotron subhead" id="overview">
        <div class="container">
            <div class="row">
                <div class="span12">
                    <div class="centered">
                        <h3>College of Subic Montessori,Inc.</h3>
                        <p>
                            Admin Threads Update Title
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<h2>Update Title</h2>

<div class="row">
    <div class="col-md-6">
        <form action="~/manage/threads/update-title" method="post">
            @Html.ValidationSummary()
            <div class="form-group">
                <input type="hidden" name="Id" value="@Model.Id" />
                <label for="Title">Title:</label>
                <input type="text" class="form-control" name="Title" id="title" value="@Model.Title" />
            </div>
            <div class="form-group">
                <label for="Description">Description</label>
                <textarea class="form-control" id="description" rows="4" name="Description">
                    @Model.Description
                </textarea>
            </div>
            <div class="form-group">
                <label for="Update At">Post Expiry:</label>
                <input type="text" class="form-control" name="UpdatedAt" id="Updated At" value="@Model.UpdatedAt" />
            </div>
            <div class="form-group">
                <label for="TemplateName" id="templatename">Template:</label>
                <select name="TemplateName">

                    <option value="post 1" @(Model.TemplateName == "post 1" ? "selected" : "")>post 1</option>
                    <option value="post 2" @(Model.TemplateName == "post 2" ? "selected" : "")>post 2</option>
                    <option value="post 3" @(Model.TemplateName == "post 3" ? "selected" : "")>post 3</option>
                </select>


            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
            <a href="~/manage/threads/Index" class="btn btn-danger">Cancel</a>
        </form>
    </div>
</div>

@section pageScripts{
    <script>
    $(function () {
        $("#UpdatedAt").datepicker({ dateFormat: 'dd/mm/yy' });
    });
    </script>
}