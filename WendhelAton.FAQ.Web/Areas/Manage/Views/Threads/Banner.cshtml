@model WendhelAton.FAQ.Web.Areas.Manage.ViewModels.Threads.BannerViewModel
@{
    ViewData["Title"] = "Banner";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<section id="subintro" style="background-color:darkred">
    <div class="jumbotron subhead" id="overview">
        <div class="container">
            <div class="row">
                <div class="span12">
                    <div class="centered">
                        <h3>College of Subic Montessori,Inc.</h3>
                        <p>
                          Admin Threads Update Banner
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="row">
    <div class="col-md-6">
        <form action="~/manage/threads/update-banner" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <input type="hidden" name="ThreadId" value="@Model.ThreadId" />
                <label for="Banner">Banner:</label><br />
                <img src="~/threads/@Model.ThreadId/banner.png" style="max-width:750px;max-height:300px;" /></br></br>
                <input type="file" class="form-control" name="banner" />
                @Html.ValidationSummary()
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Upload" />
                </div>
            </div>
        </form>
    </div>
</div>

