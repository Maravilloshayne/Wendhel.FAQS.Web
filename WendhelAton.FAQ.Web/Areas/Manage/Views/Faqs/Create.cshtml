@model WendhelAton.FAQ.Web.Areas.Manage.ViewModels.Faqs.CreateViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="subintro" style="background-color:darkred">
    <div class="jumbotron subhead" id="overview">
        <div class="container">
            <div class="row">
                <div class="span12">
                    <div class="centered">
                        <h3>College of Subic Montessori,Inc.</h3>
                        <p>
                            Create Frequently Asked and Questions
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>




<div class="row">
    <div class="col-md-6">
        <form action="~/manage/faqs/create" method="post">
            @Html.ValidationSummary()
            <div class="form-group">
                <label for="Question">Title:</label>
                <input type="text" class="form-control" name="Question" />
            </div>

            <div class="form-group">
                <label for="Description">Description</label>
                <textarea class="form-control" rows="8" name="description">
                </textarea>
            </div>

            <div class="form-group">
                <label for="Answer">Content:</label>
                <textarea class="form-control" rows="8" name="answer">
                </textarea>
            </div>

            <div class="form-group">
                <label for="Post Expiry">Post Expiry:</label>
                <input type="text" class="form-control" name="PostExpiry" id="Post Expiry" />
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
            <a href="~/manage/faqs/Index" class="btn btn-danger">Cancel</a>
        </form>
    </div>
</div>

@section pageScripts{
    <script>
        $(function () {
            $("#PostExpiry").datepicker({ dateFormat: 'dd/mm/yy' });
        });
    </script>
}

