@model WendhelAton.FAQ.Web.Areas.Manage.ViewModels.Faqs.UpdateQuestionViewModel
@{
    ViewData["Title"] = "UpdateQuestion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="subintro" style="background-color:darkred">
    <div class="jumbotron subhead" id="overview">
        <div class="container">
            <div class="row">
                <div class="span12">
                    <div class="centered">
                        <h3>College of Subic Montessori,Inc.</h3>
                        <p>
                           Update Title FAQS
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<h2>Update Title</h2>

<div class="row">
    <div class="col-md-6">
        <form action="~/manage/faqs/update-question" method="post">
            @Html.ValidationSummary()
            <div class="form-group">
                <input type="hidden" name="Id" value="@Model.Id" />
                <label for="Title">Title:</label>
                <input id="question" type="text" class="form-control" name="Question" value="@Model.Question" />
            </div>
            <div class="form-group">
                <label for="Post Expiry">Post Expiry:</label>
                <input type="text" class="form-control" name="PostExpiry" id="Post Expiry" value="@Model.PostExpiry" />
            </div>
            <div class="form-group">
                <label for="Template">Template:</label>
                <select name="TemplateName">

                    <option value="post 1" @(Model.TemplateName == "post 1" ? "selected" : "")>post 1</option>
                    <option value="post 2" @(Model.TemplateName == "post 2" ? "selected" : "")>post 2</option>
                    <option value="post 3" @(Model.TemplateName == "post 3" ? "selected" : "")>post 3</option>
                </select>


            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
            <a href="~/manage/faqs/Index" class="btn btn-danger">Cancel</a>
        </form>
    </div>
</div>

@section pageScripts{
    <script>
        $(function () {
            $("#PostExpiry").datepicker({ dateFormat: 'dd/mm/yy' });
        });
    </script>
}